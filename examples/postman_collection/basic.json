          }
        },
        {
          "name": "Employee Query - With Where Clause",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"select\": [\"first_name\", \"last_name\", \"email\", \"department\"],\n  \"where\": {\n    \"department\": \"Engineering\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/dynamic",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "dynamic"]
            }
          }
        },
        {
          "name": "Employee Query - With Order By",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"select\": [\"first_name\", \"last_name\", \"salary\", \"department\"],\n  \"order_by\": [\n    {\"field\": \"salary\", \"desc\": true}\n  ]\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/dynamic",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "dynamic"]
            }
          }
        }
