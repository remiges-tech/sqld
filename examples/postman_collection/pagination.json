  "item": [
    {
      "name": "Valid Pagination Queries",
      "item": [
        {
          "name": "Basic Pagination",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"select\": [\"first_name\", \"last_name\", \"email\", \"department\"],\n  \"where\": {\n    \"is_active\": true\n  },\n  \"order_by\": [\n    {\"field\": \"last_name\", \"desc\": false},\n    {\"field\": \"first_name\", \"desc\": false}\n  ],\n  \"pagination\": {\n    \"page\": 1,\n    \"page_size\": 10\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/paginated",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "paginated"]
            }
          }
        },
        {
          "name": "Second Page",
          "request": {
            "method": "POST",
            "header": [
              {
